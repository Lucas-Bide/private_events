<h1>Create Event</h1>

<% if @event.errors.any? %>
  <div>
    <ul>
      <% @event.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with url: '/events', method: 'post', model: @event, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>
  <%= f.label :description %>
  <%= f.text_field :description %><br/>
  <%= f.label :date, 'Date: (mm/dd/yyyy)' %>
  <%= f.text_field :date %><br/>
  <%= f.submit %>
<% end %>